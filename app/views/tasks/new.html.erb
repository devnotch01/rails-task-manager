<div class="container">
  <h1>New Task</h1>
  <form action="/tasks" method="post">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <div class="form-group">
        <label for="title">Title</label>
        <input type="text" name="task[title]" class="form-control" id="title"placeholder="Enter title">
      </div>
    <div class="form-group">
      <label for="details">Details: </label>
      <textarea class="form-control" id="details" name="task[details]" rows="3"></textarea>
    </div>
    <button type="submit" class="btn btn-info">Create Task</button>
  </form>
  <p><%= link_to "Back to list", indexpage_path %></p>
</div>

